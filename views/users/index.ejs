<%- include('../partials/header') %> 

<% user.cards.forEach(function(c) { %>
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= c.sceneType %></span>
        <p><%= c.description %></p>
      </div>
      <div class="card-action">
        <% if (user._id.equals(user && user._id)) { %>
        <form
          action="/cards/<%= c._id %>"
          method="GET"
          class="secondary-content"
        >
          <button type="submit" class="btn-small white-text">Edit</button>
        </form>
        <% if (user._id.equals(user && user._id)) { %>
        <form
          action="/cards/<%= c._id %>?_method=DELETE"
          method="POST"
          class="secondary-content"
        >
          <button type="submit" class="btn-small white-text">Delete</button>
        </form>
        <% } %> <% } %>
        <span class="align-right white-text"
          ><%= c.startingValue %> to <%= c.endingValue %></span
        >
      </div>
    </div>
  </div>
</div>
<% }) %> <%- include('../partials/footer') %>
