<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Scene Type</th>
      <th>Position<br>Year</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% user.cards.forEach(function(c) { %>
      <tr>
        <td><%= c.sceneType %></td>
        <td><%= c.position %></td>
        <td><a href="/users/<%= c._id %>">DETAILS</a></td>
        <td>
        <% if (user._id.equals(user && user._id)) { %>
          <form action="/cards/<%= c._id %>?_method=DELETE" method="POST" class="secondary-content">
            <button type="submit" class="btn-small red-text">Delete</button>
          </form>
        </td>
        <% } %>
        <td>
        <% if (user._id.equals(user && user._id)) { %>
          <form action="/cards/<%= c._id %>" method="GET" class="secondary-content">
            <button type="submit" class="btn-small red-text">Edit</button>
          </form>
        </td>
        <% } %>
        <div class="row">
          <div class="col s12 m6">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title"><%= c.sceneType %></span>
                <p><%= c.description %></p>
              </div>
              <div class="card-action">
                <% if (user._id.equals(user && user._id)) { %>
                  <form action="/cards/<%= c._id %>" method="GET" class="secondary-content">
                    <button type="submit" class="btn-small red-text">Edit</button>
                  </form>
                  <% if (user._id.equals(user && user._id)) { %>
                    <form action="/cards/<%= c._id %>?_method=DELETE" method="POST" class="secondary-content">
                      <button type="submit" class="btn-small red-text">Delete</button>
                    </form>
                    <% } %>
          <% } %>
          <span id='align-right'><%= c.startingValue %></span>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </tr>


    </tbody>
  </table>
  
<%- include('../partials/footer') %>